@model CustomerAPP.Models.CustomersPhoneModel

@*@{
    ViewData["Title"] = "Edit";
}*@

<h1>Edit</h1>

<h4>CustomersPhone</h4>
<hr />


<form id="save-customer-form">

    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div id="div-customerphone-modal" class="modal-body">
            <div class="row">
                <div class="col-md-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CpId" />
                    <div class="form-group">
                        <label asp-for="CId" class="control-label"></label>
                        <select asp-for="CId" class="form-control" asp-items="ViewBag.CId"></select>
                        <span asp-validation-for="CId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CpPhone" class="control-label"></label>
                        <input asp-for="CpPhone" class="form-control" />
                        <span asp-validation-for="CpPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</form>

